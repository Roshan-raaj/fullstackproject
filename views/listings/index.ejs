

<% layout("/layouts/boilerplate") %>


  <%if(nameee.length){%>
    <div class="alert alert-success  alert-dismissible fade show col-6 offset-3" role="alert"  > <%= nameee %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      </button>
    </div>
    <%}%>

    <%if(newuser.length){%>
      <div class="alert alert-success  alert-dismissible fade show col-6 offset-3" role="alert"  > <%= newuser %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
      </div>
      <%}%>
  


<body>
 
    <!-- <button><a href="/listings/new">create new listings</a></button> -->
    <h2>All Listings</h2>
 
  

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of alllisting){ %>
    <div class="card "  >
        
        <a href="/listings/<%=listing._id%>"><img src="<%=listing.image %>" class="card-img-top" height="300px" alt="..."><div class="card-img-overlay"></div></a>
        <div class="card-body">
          <p class="card-text"> <b><%= listing.title%></b>
           <br>  &#8377;<%= listing.price.toLocaleString("en-IN")%>/night </p>
        </div>
      </div>
      <% } %>
    </div>

    
</body>
</html>